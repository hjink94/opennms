<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
           xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <reference id="flowRepository" interface="org.opennms.netmgt.flows.api.FlowRepository" availability="mandatory"/>
    <reference id="classificationDao" interface="org.opennms.netmgt.flows.classification.persistence.api.ClassificationRuleDao" availability="mandatory"/>
    <reference id="classificationEngine" interface="org.opennms.netmgt.flows.classification.ClassificationEngine" availability="mandatory"/>
    <reference id="csvRuleParser" interface="org.opennms.netmgt.flows.classification.CsvRuleParser" availability="mandatory"/>
    <reference id="transactionTemplate" interface="org.springframework.transaction.support.TransactionOperations" availability="mandatory"/>

    <bean id="flowRestService" class="org.opennms.netmgt.flows.rest.internal.FlowRestServiceImpl">
        <argument ref="flowRepository" />
    </bean>
    <service interface="org.opennms.netmgt.flows.rest.FlowRestService" ref="flowRestService" >
        <service-properties>
            <entry key="application-path" value="/rest" />
        </service-properties>
    </service>

    <bean id="classificationRestService" class="org.opennms.netmgt.flows.rest.internal.classification.ClassificationRestServiceImpl">
        <argument ref="classificationDao" />
        <argument ref="classificationEngine" />
        <argument ref="csvRuleParser" />
        <argument ref="transactionTemplate" />
    </bean>
    <service interface="org.opennms.netmgt.flows.rest.classification.ClassificationRestService" ref="classificationRestService" >
        <service-properties>
            <entry key="application-path" value="/rest" />
        </service-properties>
    </service>
</blueprint>